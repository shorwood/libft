{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"focus": true,
		"reveal": "always",
		"panel": "shared",
		"showReuseMessage": false
    },
	"tasks": 
	[
		//--- Launch the debug binary.
		{
			"label": "run-debug",
			"type": "shell",
			"command": "time ${workspaceFolder}/a.out",
			"dependsOn": ["build-debug"],
			"problemMatcher": [],
			/*"group": {
				"kind": "test",
				"isDefault": false
			},*/
		},

		//--- Build the debug binary.
		{
			"label": "build-debug",
			"type": "shell",
			"command": "gcc",
			"args": [
				"libft.c",
				"-g",
				"-Wall",
				"-Wextra",
				"-Werror",
				"-I/Users/shorwood/LibFt/includes",
				"-L/Users/shorwood/LibFt",
				"-lft"
			],
			"dependsOn": ["build-libft"],
			"problemMatcher": [
				"$gcc"
			]
		},

		//--- Clean out the test binary.
		{
			"label": "clean",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"a.out.dSYM",
				"a.out"
			],
			"problemMatcher": []
		},

		//--- Build the libft.
		{
			"label": "build-libft",
			"type": "shell",
			"command": "make -C /Users/shorwood/LibFt",
			"problemMatcher": [
				"$gcc"
			]
		},

		//--- Check the norm of the project.
		{
			"label": "norm",
			"type": "shell",
			"command": "norminette",
			"args": [],
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "^Norme: (.*)$",
						"file": 1
					},
					{
						"regexp": "^(Error|Warning)(?: \\(line (\\d+)(?:, col (\\d+))?\\))?: (.*)$",
						"severity": 1,
						"line": 2,
						"column": 3,
						"message": 4,
						"loop": true
					}
				]
			}
		}
	]
}